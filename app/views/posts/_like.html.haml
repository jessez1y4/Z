= form_for LikeRelationship.new(post_id: post.id), html: { id: 'hidden-like-form' }, remote: true do |f|
  = f.hidden_field :post_id
  = f.submit '', class: 'hidden'

#post-likes.post-likes-click.info-entry
  %span.glyphicon.glyphicon-heart.glyphicon-heart-black
  %small.text-muted Like it ?
  .pull-right
    =@post.likes
