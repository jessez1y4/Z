.masonry-brick
  .masonry-like-btn.hidden-info.hidden
    = render 'partials/masonry_like_button', post: post
  %button.masonry-share-btn.hidden-info.hidden
    = fa_icon 'share'
  .masonry-img
    = link_to post, target: '_blank' do
      = cl_image_tag post.cloudinary_id, width: 210, height: 210, crop: :fill, gravity: :north, quality: 95
  .masonry-title
    %strong= truncate post.title.titleize, length: 22
    .pull-right.small.text-muted
      = fa_icon 'eye', text: post.views_count
      %span{id: "masonry-title-likes-#{post.id}"}
        = fa_icon 'heart-o', text: post.like_relationships_count
  .masonry-author.small.text-muted
    - if controller_name == 'users'
      .text-center
        = time_ago_in_words post.created_at
        ago
    - else
      by
      = link_to post.user.full_name.titleize, post.user
      .pull-right
        = time_ago_in_words post.created_at
        ago
  - if post.tags.any?
    .masonry-tags.hidden-info.hidden
      - post.tags.each do |tag|
        = link_to tag.name, tag, class: 'tag'
