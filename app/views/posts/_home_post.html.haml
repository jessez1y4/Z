.masonry-brick
  .masonry-like-btn
    = render 'partials/masonry_like_button', post: post
  .masonry-img
    = link_to post, target: '_blank' do
      = cl_image_tag_with_crop post, width: 210, crop: :fill, gravity: :north, quality: 95
  .masonry-title
    %strong= truncate post.title.titleize, length: 22
    .pull-right
      %span.masonry-views
        %span.glyphicon.glyphicon-eye-open
        = post.views_count
      %span.glyphicon.glyphicon-heart
      %span{class: "masonry-title-likes-#{post.id}"}
        = post.like_relationships_count
  .masonry-author.small.text-muted
    - if controller_name == 'users'
      .text-center
        = time_ago_in_words post.created_at
        ago
    - else
      by
      = link_to post.user.full_name.titleize, post.user
      .pull-right
        = time_ago_in_words post.created_at
        ago

