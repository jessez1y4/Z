.btn-group.pull-left
  %button.btn.btn-default.btn-sm.dropdown-toggle{'data-toggle' => 'dropdown', type: 'button'}
    = params[:channel] || 'Everything'
    %span.caret
  %ul.dropdown-menu.text-left
    %li
      = link_to 'Everything', posts_path(params.merge(channel: 'Everything'))
    %li.divider
    %li
      = link_to 'Following', posts_path(params.merge(channel: 'Following'))
    %li.divider
    %li
      %a{href: '#'} Channel 1
    %li
      %a{href: '#'} Channel 2
    %li
      %a{href: '#'} Channel 3

.btn-group
  .btn.btn-default.btn-sm.dropdown-toggle{'data-toggle' => 'dropdown', type: 'button'}
    = params[:sort] || 'Hot this week'
    %span.caret

  %ul.dropdown-menu.text-left
    %li
      = link_to 'Newest', posts_path(params.merge(sort: 'Newest'))
    %li.divider
    %li
      = link_to 'Hot today', posts_path(params.merge(sort: 'Hot today'))
    %li
      = link_to 'Hot this week', posts_path(params.merge(sort: 'Hot this week'))
    %li
      = link_to 'Hot this month', posts_path(params.merge(sort: 'Hot this month'))
    %li
      = link_to 'Hot all time', posts_path(params.merge(sort: 'Hot all time'))

.btn-group.pull-right
  - if params[:view] == 'grid'
    = link_to 'Large', posts_path(params.merge(view: nil)), class: 'btn btn-default btn-sm'
    .div.btn.btn-default.btn-sm.active
      Grid
  - else
    .div.btn.btn-default.btn-sm.active
      Large
    = link_to 'Grid', posts_path(params.merge(view: 'grid')), class: 'btn btn-default btn-sm'
