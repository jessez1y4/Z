.container
  - if @following_posts.any?
    #following-carousel.carousel.slide
      .post-row-header
        FOLLOWING
        %span.more
          = link_to 'MORE', posts_path(params.merge(scope: 'Following'))
        - if @following_posts.size > 4
          %ol.carousel-indicators
            %li.active{'data-target' => '#following-carousel', 'data-slide-to' => '0'}
            %li{'data-target' => '#following-carousel', 'data-slide-to' => '1'}
            %li{'data-target' => '#following-carousel', 'data-slide-to' => '2'}

            / %a{href: "#following-carousel", 'data-slide' => "prev"}
            /   %span.glyphicon.glyphicon-chevron-left
            / %a{href: "#following-carousel", 'data-slide' => "next"}
            /   %span.glyphicon.glyphicon-chevron-right
            / </a>
            / <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
            /   <span class="glyphicon glyphicon-chevron-right"></span>
            / </a>
      .carousel-inner
        - @following_posts.each_slice(4) do |posts|
          .item
            - posts.each do |post|
              .col-xs-3
                = render 'posts/post', post: post, show_tag: 0
  - else
    #follow-msg
      .post-row-header
        FOLLOWING
        %span.more.text-muted
          MORE
      .text-center
        %h3
          You are not following anyone yet...

        %p.text-muted
          Look around to discover amazing
          = link_to 'styles', posts_path
          and
          = link_to 'people', users_path
          \.

  #hot-carousel.carousel.slide
    .post-row-header
      HOT
      %span.more
        = link_to 'MORE', posts_path(params.merge(sort: 'Hot'))
      %ol.carousel-indicators
        %li.active{'data-target' => '#hot-carousel', 'data-slide-to' => '0'}
        %li{'data-target' => '#hot-carousel', 'data-slide-to' => '1'}
        %li{'data-target' => '#hot-carousel', 'data-slide-to' => '2'}
    .carousel-inner
      - @hot_posts.each_slice(4) do |posts|
        .item
          - posts.each do |post|
            .col-xs-3
              = render 'posts/post', post: post, show_tag: 0

  #new-carousel.carousel.slide
    .post-row-header
      NEW
      %span.more
        = link_to 'MORE', posts_path(params.merge(sort: 'New'))
      %ol.carousel-indicators
        %li.active{'data-target' => '#new-carousel', 'data-slide-to' => '0'}
        %li{'data-target' => '#new-carousel', 'data-slide-to' => '1'}
        %li{'data-target' => '#new-carousel', 'data-slide-to' => '2'}
    .carousel-inner
      - @new_posts.each_slice(4) do |posts|
        .item
          - posts.each do |post|
            .col-xs-3
              = render 'posts/post', post: post, show_tag: 0

  #star-carousel.carousel.slide
    .post-row-header
      STARS
      %span.more
        = link_to 'MORE', users_path
      %ol.carousel-indicators
        %li.active{'data-target' => '#star-carousel', 'data-slide-to' => '0'}
        %li{'data-target' => '#star-carousel', 'data-slide-to' => '1'}
        %li{'data-target' => '#star-carousel', 'data-slide-to' => '2'}
    .carousel-inner
      - @star_users.each_slice(3) do |users|
        .item
          - users.each do |user|
            .col-xs-4
              = render 'users/user', user: user


