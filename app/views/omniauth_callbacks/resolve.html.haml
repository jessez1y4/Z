.container
  .row
    .col-xs-8.col-xs-offset-2
      .page-header.text-center
        %h4
          You've already created an account with
          %strong
            = @user.email
        %p
          This account can be logged in in the following ways.

      - if @user.random_password?
        %p.text-center
          Your current password is randomly generated by our system.
          = form_for(:user, as: @user, url: password_path('user'), html: { method: :post }) do |f|
            = f.hidden_field :email, value: @user.email
            .text-center
              = f.submit 'Send me instructions to reset password', class: 'btn btn-default btn-lg'

      - else
        %p.text-center
          Using your password&nbsp;
          %small.forgot-password
            = link_to 'Forgot?', new_password_path('user')
          = form_for(:user, as: @user, url: session_path('user'), html: { class: 'form-horizontal', id: 'sign-in-form' }) do |f|
            = f.hidden_field :login, value: @user.email
            .form-group
              .col-xs-6.col-xs-offset-3
                = f.password_field :password, class: 'form-control'
              .col-xs-3
                = f.submit 'Sign In', class: 'btn btn-primary'

      .row
        .col-xs-8.col-xs-offset-2
          %hr.hr-dark

      #resolve-login.text-center
        - if @user.sign_in_authentications.find_by(provider: 'facebook')
          .fb-login-btn
            = link_to user_omniauth_authorize_path(:facebook),
                      class: 'btn btn-default wf-fix' do
              .icons-facebook
                Log in with Facebook

        - if @user.sign_in_authentications.find_by(provider: 'google')
          .gg-login-btn
            = link_to user_omniauth_authorize_path(:google),
                      class: 'btn btn-default wf-fix' do
              .icons-google
                Log in with google

      .row
        .col-xs-8.col-xs-offset-2
          %hr.hr-dark
      %p.text-center
        = "If you wish to be able to sign in with #{@auth_data.provider.titleize} account,"
        %br
        add
        %strong
          = "Sign in with #{@auth_data.provider.titleize}"
        in setting page.

