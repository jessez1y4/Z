.container
  .col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
    .panel.panel-default
      .panel-body
        .col-xs-10.col-xs-offset-1
          %h3.text-center
            Join XXX Today!
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
            .form-group
              %label Email
              = f.email_field :email, autofocus: true, class: 'form-control'

            .form-group
              %label Username
              = f.text_field :username, class: 'form-control'

            .form-group
              %label Password
              = f.password_field :password, class: 'form-control'

            .form-group
              %label Password Confirmation
              = f.password_field :password_confirmation, class: 'form-control'

            .form-group
              = f.submit 'Sign Up', class: 'btn btn-primary btn-lg btn-lg-pad'
              #sns-signin.pull-right
                Sign up with:&nbsp;&nbsp;
                = link_to fa_icon('facebook-square 2x', class: 'facebook-color'), root_path
                &nbsp;&nbsp;
                = link_to fa_icon('google-plus-square 2x', class: 'google-color'), root_path
                &nbsp;&nbsp;
                = link_to fa_icon('twitter-square 2x', class: 'twitter-color'), root_path
