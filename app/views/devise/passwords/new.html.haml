.container
  .col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
    .panel.panel-default
      .panel-body
        .col-xs-10.col-xs-offset-1
          %h3.text-center
            Forgot your password?
          %br
          = form_for(:user, as: @user, url: password_path('user'), html: { method: :post, class: 'form-horizontal', id: 'forgot-password-form' }) do |f|
            .form-group
              %label Enter your email
              = f.email_field :email, autofocus: true, autocomplete: false, class: 'form-control'
            .form-group
              = f.submit 'Send me instructions to reset password', class: 'btn btn-primary btn-lg btn-block'
