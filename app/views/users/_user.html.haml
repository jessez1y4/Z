.user-brick
  .exhibit-posts
    - user.exhibit_posts.each_with_index do |post, index|
      - if index == 0
        .exhibit-post-lg
          = link_to post, target: '_blank' do
            = cl_image_tag_with_crop post, width: 197, height: 264, crop: :fill
      - else
        .exhibit-post
          = link_to post, target: '_blank' do
            = cl_image_tag_with_crop post, width: 98, height: 132, crop: :fill

  .user-info
    .pull-left
      = link_to show_user_path(user) do
        = cl_image_tag user.avatar_cloudinary_id, width: 70, height: 70, crop: 'fill', gravity: 'face'

    .user-name
      = link_to show_user_path(user) do
        = user.full_name.titleize

    %div
      .pull-right

      .user-stats
        %span.glyphicon.glyphicon-heart
        = user.likes_count
      = render 'partials/follow_button', user: user

