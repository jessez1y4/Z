.container
  = render 'partials/user_sidebar'
  #user-tabs
    #user-style-tab.active-tab
      Posted
      %span.tab-count
        = @user.posts_count
      styles
    #user-liked-tab
      = link_to user_liked_posts_path(@user) do
        Likes
        %span.tab-count
          = @user.liked_posts_count
        styles
    #user-rest-tab
      &nbsp;
  #masonry-container
    = render @posts
  #paginate-containter
    = paginate @posts

  .text-center
    #load-more.btn.btn-default
      = fa_icon 'repeat'
      %strong
        &nbsp;Loading more ..
