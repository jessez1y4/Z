.container
  #bookmark-btn.pull-right
    - if user_signed_in?
      = bookmark_button @tag
    - else
      %button.btn.btn-primary{'data-toggle' => 'modal', 'data-target' => '#sign-in-modal'}
        .icons-bookmark
          Add to Feed
  %h4
    %small
      = @tag.posts_count
      styles with tag&nbsp;
    %span.tag
      = @tag.name

  %hr.hr-dark
  #masonry-container
    = render @posts
  #paginate-containter
    = paginate @posts

  #load-more
    Loading more ...
