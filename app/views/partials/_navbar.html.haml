%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    = render 'partials/navbar_left'

    %ul.nav.navbar-nav.navbar-right
      %li.dropdown
        %a#post-style-btn.dropdown-toggle.fa-14{"data-toggle" => "dropdown", href: "#"}
          = fa_icon 'plus'

        %ul.dropdown-menu
          %li
            %a{'data-toggle' => 'modal', 'data-target' => '#upload-post-modal', href: '#'}
              Upload
          %li.divider
          %li
            %a{'data-toggle' => 'modal', 'data-target' => '#from-web-post-modal', href: '#'}
              From web

      %li.btn-group
        %button#nav-user-menu-btn.dropdown-toggle.btn.btn-primary.navbar-btn{"data-toggle" => "dropdown", href: "#"}
          %strong= current_user.full_name.titleize
        %ul.dropdown-menu
          %li
            = link_to 'My styles', current_user
          %li
            = link_to 'My likes', user_liked_posts_path(current_user)
          %li
            = link_to 'Settings', edit_user_path
          %li.divider
          %li
            = link_to 'Sign out', destroy_user_session_path, method: :delete

