        = link_to current_user.full_name.titleize, current_user, class: 'btn btn-default navbar-btn', id: 'nav-user-btn'

      %li.btn-group
        %button#nav-user-menu-btn.dropdown-toggle.btn.btn-default.navbar-btn.fa-14{"data-toggle" => "dropdown", href: "#"}
          %b.caret
        %ul.dropdown-menu
          %li
            %a{href: "#"} Action
          %li
            %a{href: "#"} Another action
          %li
            = link_to 'Settings', edit_user_path
          %li.divider
          %li
