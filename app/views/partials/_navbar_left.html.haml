%ul.nav.navbar-nav
  = link_to 'StyleMe', root_path, class: 'navbar-brand'
  - if params[:sort]
    %li.dropdown
      %a.fa-14.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
        = fa_icon 'bars'
      %ul#nav-menu.dropdown-menu
        = render 'partials/nav_menu'

    %li.dropdown
      %a.fa-14.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
        %strong= params[:sort].titleize
        = fa_icon 'sort'
      %ul.dropdown-menu
        %li.dropdown-header
          Sort by
        %li
          = link_to 'Hot', params.merge(sort: 'Hot')
        %li
          = link_to 'New', params.merge(sort: 'New')

  - else
    %li.dropdown
      %a.fa-14.dropdown-toggle{"data-toggle" => "dropdown", href: '#'}
        = fa_icon 'bars'
      %ul#nav-menu.dropdown-menu
        = render 'partials/nav_menu'
.col-xs-3.nav-search
  %form.navbar-form.navbar-left{role: "search"}
    #nav-search-group
      %input#nav-search-box.form-control{placeholder: "Search", type: "text"}/
      %span#nav-search-btn.input-group-btn.hidden
        = link_to root_path, class: 'btn btn-default' do
          = fa_icon 'search'
