- if !user_signed_in?
  %button.btn.btn-default{'data-toggle' => 'modal', 'data-target' => '#sign-in-modal'}
    = fa_icon 'rss', text: 'Follow'
- elsif user == current_user
  = link_to edit_user_path, class: 'btn btn-default fa-14' do
    = fa_icon 'pencil', text: 'Edit my profile'
- else
  #follow-btn
    = follow_button user
