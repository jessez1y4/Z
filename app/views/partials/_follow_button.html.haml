- if !user_signed_in?
  .btn-group
    %button.btn.btn-primary{'data-toggle' => 'modal', 'data-target' => '#sign-in-modal'}
      = fa_icon 'rss', text: 'Follow'
- elsif user == current_user
  = link_to edit_user_path, class: 'btn btn-primary fa-14' do
    = fa_icon 'pencil', text: 'Edit profile'
- else
  .follow-btn{id: "follow-btn-#{user.id}"}
    = follow_button user
