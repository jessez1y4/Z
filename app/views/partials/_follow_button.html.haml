- if !user_signed_in?
  .follow-btn
    %button.btn.btn-primary{'data-toggle' => 'modal', 'data-target' => '#sign-in-modal'}
      .icons-rss
        Follow
- elsif user == current_user
  = link_to edit_user_path, class: 'btn btn-primary edit-profile-btn' do
    .icons-pencil
      Edit profile
- else
  .follow-btn{id: "follow-btn-#{user.id}"}
    = follow_button user
