.container
  %nav.navbar.navbar-inverse{role: "navigation"}
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'StyleMe', root_path, class: 'navbar-brand'
    / Collect the nav links, forms, and other content for toggling
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to 'Style', posts_path

        %li
          = link_to 'Channel', channels_path

      %form.navbar-form.navbar-left{role: "search"}
        .form-group
          %input.form-control{placeholder: "Search", type: "text"}/
        %button.btn.btn-default{type: "submit"}
          = fa_icon 'search'
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.modal-trigger{href: '#', 'data-modal-name' => 'sign-in'} Already a member?
        %li
          = link_to 'Sign up', new_registration_path('user')

#sign-in-modal.modal
  .modal-dialog.modal-dialog-center
    .modal-content
      .modal-header
        %button{type: 'button', class: 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
          &times;
        %h4.modal-title
          Sign in
      .modal-body
        = form_for(:user, as: @user, url: session_path('user'), html: { class: 'form-horizontal', id: 'sign-in-form' }) do |f|
          .row
            .col-xs-10.col-xs-offset-1
              .form-group
                %label Email or Username
                = f.text_field :login, autofocus: true, autocomplete: false, class: 'form-control', tabindex: 1
              .form-group
                %label
                  Password&nbsp;
                  %small.forgot-password
                    = link_to 'Forgot?', new_password_path('user')
                = f.password_field :password, class: 'form-control', tabindex: 2
          .row
            .col-xs-3.col-xs-offset-1
              .form-group
                = f.submit 'Sign In', class: 'btn btn-primary btn-lg btn-block'
            .col-xs-6.col-xs-offset-1
              #sns-signin.pull-right
                Sign in with:&nbsp;&nbsp;
                = link_to fa_icon('facebook-square 2x', class: 'facebook-color'), root_path
                &nbsp;&nbsp;
                = link_to fa_icon('google-plus-square 2x', class: 'google-color'), root_path
                &nbsp;&nbsp;
                = link_to fa_icon('twitter-square 2x', class: 'twitter-color'), root_path
