#user-bar-s.row
  #user-main.col-xs-5
    .pull-left
      = cl_image_tag @user.avatar_cloudinary_id, width: 60, height: 60, crop: 'fill', gravity: 'face'

    = link_to @user do
      %h4
        = @user.full_name.titleize
    %p
      %span.glyphicon.glyphicon-map-marker
      Someplace, Somestate


  #user-stats.col-xs-4
    .row.text-center
      .col-xs-3
        .stat-count
          = @user.likes_count
        .stat-name
          Likes
      .col-xs-3
        .stat-count
          = @user.views_count
        .stat-name
          Views
      .col-xs-3
        .stat-count.followers-count
          = @user.followers_count
        .stat-name
          Followers
      .col-xs-3
        .stat-count
          = @user.followings_count
        .stat-name
          Following
  #user-follow-btn.pull-right
    = render 'partials/follow_button', user: @user
%hr.hr-darker
